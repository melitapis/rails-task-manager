<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>


<button><%= link_to "retour", tasks_path %></button>
<button><%= link_to "edit", edit_path(@task) %></button>
